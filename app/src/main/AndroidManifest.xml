<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fiu.com.skillcourt">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.intro.IntroActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"></activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"></activity>
        <activity
            android:name=".ui.register.RegisterActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"></activity>
        <activity
            android:name=".ui.dashboard.MainDashboardActivity"
            android:label="@string/app_name" />
        <activity android:name=".ui.startgame.StartGameActivity"></activity>
        <activity
            android:name=".ui.dynamicsteps.DynamicStepsActivity"
            android:label="@string/title_activity_dynamic_steps"
            android:parentActivityName=".ui.base.BaseActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fiu.com.skillcourt.ui.base.BaseActivity" />
        </activity>
        <activity
            android:name=".ui.coach_dashboard.CoachingDashboardActivity"
            android:label="@string/title_activity_coaching_dashboard"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.new_team.NewTeam" />
        <activity android:name=".ui.search_user.SearchUserActivity" />
        <activity android:name=".ui.team_details.TeamDetailsActivity"></activity>
    </application>

</manifest>